generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
  output = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int           @id @default(autoincrement())
  description  String
  transactions Transaction[]
}

model Seller {
  id             Int           @id @default(autoincrement())
  name           String        @unique // has index
  isAdmin        Boolean       @default(false)
  isAffiliatedTo Int?
  creator        Seller?       @relation("CreatorAffiliates", fields: [isAffiliatedTo], references: [id])
  affiliates     Seller[]      @relation("CreatorAffiliates")
  transactions   Transaction[]
}

model Transaction {
  id              Int             @id @default(autoincrement())
  typeId          Int
  productId       Int
  sellerId        Int
  date            DateTime
  valueInCents    Int
  transactionType TransactionType @relation(fields: [typeId], references: [id])
  Product         Product         @relation(fields: [productId], references: [id])
  Seller          Seller          @relation(fields: [sellerId], references: [id])

  @@index([sellerId])
}

model TransactionType {
  id           Int           @id @default(autoincrement())
  description  String
  nature       Nature
  signal       Signal
  transactions Transaction[]
}

enum Nature {
  INFLOW
  OUTFLOW
}

enum Signal {
  ADDITION
  SUBTRACTION
}
